<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <title>Blog</title>
  </head>
  <body>
    <div class="container mt-4">
      <h1>Blog Articles</h1>
      <a href="/articles/new" class="btn btn-success mb-3">New Article</a>

      <% articles.forEach((article) => { %>
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title"><%= article.title %></h5>
          <div class="card-subtitle text-muted mb-2"><%= (article.createdAt).toLocaleDateString() %></div>
          <div class="card-text mb-2"><%= article.description %></div>
          <a href="/articles/<%= article.slug %>" class="btn btn-primary">Read More</a>
          <a href="/articles/edit/<%= article.slug %>" class="btn btn-warning"
            >Edit</a
          >
          <form
            action="/articles/<%= article.id %>?_method=DELETE"
            method="POST"
            style="display: inline"
          >
            <input type="hidden" name="_method" value="DELETE" />
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
      <% }) %>
    </div>
  </body>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"
  ></script>
</html>
